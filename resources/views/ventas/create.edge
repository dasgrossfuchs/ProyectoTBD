<h1>
    Productos Chagus
</h1>
<body style="font-family:'Times New Roman', Times, serif; font-size: 20 px; font-weight: bold;">
 <ul>

          <li><a href="/">Pagina Principal</a></li>
        <li><a href="/productos">Lista de Productos</a></li>
        <li><a href="/producto/nuevo">Agregar producto</a></li>
        <li><a href="/ventas">Lista de Ventas</a></li>
        <li><a href="/inventarios">Lista de Inventario</a></li>
      </ul>
<table align="center">
    <form action="/venta/nueva" method="POST">
        {{ csrfField() }}
        <tr>
            <th>Seleccionar</th>
            <th>Nombre</th>
            <th>Cantidad</th>
        </tr>
        @each((producto,index) in productos.rows)
            <tr><td><input type="checkbox" name="seleccionados[{{index}}][producto_id]" value="{{producto.id}}"/></td>
                <td>{{producto.nombre}}</td>
                <td><input type="number" name="seleccionados[{{index}}][cantidad]" value="0" min ="0"/></td></tr>
        @endeach
    </table>
    <button type="submit">Crear Venta</button>
    </form>

</body>
