  <body>
  <h1 style="text-align:left;font-size: 25px;">
    Inventario
  </h1>
      </head>
      <body>
      
      <ul>

          <li><a href="/">Pagina Principal</a></li>
        <li><a href="/productos">Lista de Productos</a></li>
        <li><a href="/producto/nuevo">Agregar producto</a></li>
        <li><a href="/venta/nueva">Comprar</a></li>
        <li><a href="/ventas">Lista de Ventas</a></li>
      </ul>
      <table border="2" border-color-light=gray border-color-dark=black align=center style=" padding: 20px, 50px;">
          <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Presentacion del Producto</th>
            <th>Cantidad Anterior</th>
            <th>Cantidad Actual</th>
          </tr>
      @each(producto in inventario.rows)
      <tr>
        <td>{{{producto.nombre}}}</td>
        <td>{{{producto.precio}}}</td>
        <td>{{{producto.marca}}}</td>
        <td>{{{producto.presentacion}}}</td>
        <td>{{{producto.cantidad_antes}}}</td>
        <td>{{{producto.cantidad_ahora}}}</td>
      </tr>
      @endeach
      </table>
  </body>
  <footer> </footer>
</html>
